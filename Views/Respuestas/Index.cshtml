@model IEnumerable<Preguntas.Models.Respuesta>

@{
    ViewData["Title"] = "Respuestas";
}

<h1>Respuestas</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-success">Crear Nueva Respuesta</a>
    <a href="@Url.Action("Index", "Preguntas")" class="btn btn-secondary">Regresar a Preguntas</a>
</div>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Contenido)</th>
            <th>@Html.DisplayNameFor(model => model.FechaCreacion)</th>
            <th>@Html.DisplayNameFor(model => model.Pregunta)</th>
            <th>@Html.DisplayNameFor(model => model.Usuario)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Contenido)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaCreacion)</td>
                <td>@Html.DisplayFor(modelItem => item.Pregunta.Contenido)</td>
                <td>@Html.DisplayFor(modelItem => item.Usuario.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRespuesta" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdRespuesta" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.IdRespuesta" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

